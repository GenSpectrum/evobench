#!/bin/bash
set -meuo pipefail
IFS=

mypath=$(readlink -f "$0")
mydir=$(dirname "$mypath")
basedir=$(dirname "$mydir")

usage() {
    echo "$0"
    echo
    echo "  Copies these directories:"
    echo
    echo "     evobench-probes/include/evobench/ -> include/"
    echo "     evobench-probes/src/evobench/ -> src/"
    echo
    echo "  i.e. run this from your project that uses include/ and src/"
    echo "  subdirectories, to get a copy of the probes infrastructure."
    echo "  This is a hack to avoid making a proper package out of"
    echo "  'evobench-probes'."
    false
}

if [ $# -ne 0 ]; then
    usage
fi


cp -a "$basedir"/evobench-probes/include/evobench/ include/
cp -a "$basedir"/evobench-probes/src/evobench/ src/

